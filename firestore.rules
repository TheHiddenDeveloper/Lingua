
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated(request) {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(request, userId) {
      return request.auth.uid == userId;
    }

    // Rules for user history collections
    match /userHistories/{userId}/{historyCollection}/{docId} {
      // Allow a user to read, write, update, and delete any document in any of their own history subcollections.
      // This covers textTranslations, textSummaries, voiceToText, and textToSpeech.
      allow read, write: if isAuthenticated(request) && isOwner(request, userId);
    }
  }
}
