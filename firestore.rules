
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own history data.
    // This rule applies to all subcollections like textTranslations, textSummaries, etc.
    match /userHistories/{userId}/{historyCollection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
