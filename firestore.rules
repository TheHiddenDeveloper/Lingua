
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // User Histories
    // Each user can read and write their own history entries.
    // No one else can access other users' history.
    match /userHistories/{userId}/{historyCollection}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow listing of history collections for the authenticated user
    // This is needed for client-side queries like getDocs(collection(db, `userHistories/${userId}/textTranslations`))
    match /userHistories/{userId}/{historyCollection} {
      allow list: if request.auth != null && request.auth.uid == userId;
    }
  }
}
